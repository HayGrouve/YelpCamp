<%- include("./partials/header") %>

<div class="row">
    <h1 style="text-align: center">Edit <%= user.username %>'s Profile</h1>
    <div style="width: 30%; margin: 25px auto;">
        <form action="/users/<%= user._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="user[username]" placeholder="Username *" value="<%= currentUser.username %>" autofocus required>
            </div>
            <div class="form-group">
                <input class="form-control" type="password" name="password" placeholder="Password *" value="********">
            </div>
            <hr>
            <div class="form-group">
                <input class="form-control" type="text" name="user[firstname]" placeholder="First Name *" value="<%= currentUser.firstname %>" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="user[lastname]" placeholder="Last Name *" value="<%= currentUser.lastname %>" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="email" name="user[email]" placeholder="Email *" value="<%= currentUser.email %>" required>
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="user[age]" placeholder="Age" value="<%= currentUser.age %>">
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="user[avatar]" placeholder="Avatar Img Url" value="<%= currentUser.avatar %>">
            </div>
            <div class="form-group">
                <textarea class="form-control" name="user[description]" cols="30" rows="5"
                    placeholder="Description"><%= currentUser.description %></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-primary btn-block"><i class="fas fa-edit"></i> Edit</button>
            </div>
        </form>
        <a href="/campgrounds"><i class="fas fa-caret-left"></i> Go Back</a>
    </div>
</div>

<%- include("./partials/footer") %>